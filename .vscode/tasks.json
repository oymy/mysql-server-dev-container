{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/mysql-server/bld"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "install",
            "type": "shell",
            "command": "make install",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "options": {
                "cwd": "${workspaceFolder}/mysql-server/bld"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}